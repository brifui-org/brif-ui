{
  "extends": "@brifui/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "~brifui/*": ["./.brifui/*"],
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", ".brifui/**/*.d.ts"],
  "exclude": ["node_modules", "../node_modules"]
}
