{
  "name": "@brifui/cli",
  "version": "0.0.5",
  "description": "CLI tool for Brif UI.",
  "sideEffects": false,
  "keywords": [
    "theme",
    "theming",
    "ui"
  ],
  "files": [
    "dist",
    "src"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "brif": "bin.js",
    "brifui": "bin.js"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsup src --dts",
    "dev": "tsup src --watch",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "lint": "eslint ."
  },
  "peerDependencies": {
    "@pandacss/dev": "^0.52.0"
  },
  "devDependencies": {
    "@brifui/eslint-config": "^0.0.3",
    "@brifui/typescript-config": "^0.0.3",
    "@types/node": "^22.13.5",
    "cac": "^6.7.14",
    "clean-package": "^2.2.0",
    "eslint": "^9.15.0",
    "typescript": "5.5.4",
    "update-notifier": "^7.3.1"
  },
  "dependencies": {
    "@clack/prompts": "0.9.1",
    "@pandacss/dev": "^0.52.0",
    "bundle-n-require": "^1.1.1",
    "escalade": "^3.2.0",
    "fast-glob": "^3.3.3",
    "find-up": "^7.0.0",
    "minimatch": "^10.0.1"
  },
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ],
    "shims": true
  }
}
