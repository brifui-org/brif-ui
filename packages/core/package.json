{
  "name": "@brifui/core",
  "version": "0.0.1-beta.4",
  "description": "Core library of Brif UI",
  "type": "module",
  "sideEffects": false,
  "keywords": [
    "brif",
    "component",
    "ui"
  ],
  "files": [
    "dist",
    "src"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src --dts",
    "dev": "tsup src --watch",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./utils": "./src/utils/index.ts"
  },
  "devDependencies": {
    "@brifui/eslint-config": "workspace:*",
    "@brifui/typescript-config": "workspace:*",
    "@types/react": "^19.0.5",
    "@types/react-dom": "^19.0.3",
    "typescript": "5.5.4"
  },
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  },
  "dependencies": {
    "@brifui/theme": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0"
  }
}
