{
  "name": "@brifui/button",
  "version": "0.0.1",
  "description": "Button component - Brif UI",
  "type": "module",
  "sideEffects": false,
  "keywords": [
    "button",
    "component",
    "ui"
  ],
  "files": [
    "dist",
    "src"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsup src --dts",
    "dev": "tsup src --watch",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "eslint ."
  },
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "dependencies": {
    "@brifui/styled": "workspace:*",
    "@brifui/utils": "workspace:*",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@brifui/eslint-config": "workspace:*",
    "@brifui/mocks": "workspace:*",
    "@brifui/typescript-config": "workspace:*",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9.15.0",
    "global-jsdom": "^26.0.0",
    "jsdom": "^26.0.0",
    "typescript": "5.5.4"
  },
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
