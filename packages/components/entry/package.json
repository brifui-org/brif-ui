{
  "name": "@brifui/components",
  "version": "0.0.1-beta.0",
  "description": "Brif UI components",
  "type": "module",
  "sideEffects": false,
  "keywords": [
    "box",
    "component",
    "ui"
  ],
  "files": [
    "dist",
    "src"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src --dts",
    "dev": "tsup src --watch",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "dependencies": {
    "@brifui/box": "workspace:*",
    "@brifui/core": "workspace:*"
  },
  "devDependencies": {
    "@brifui/eslint-config": "workspace:*",
    "@brifui/typescript-config": "workspace:*",
    "@types/react": "^19.0.5",
    "@types/react-dom": "^19.0.3",
    "typescript": "5.5.4"
  },
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
