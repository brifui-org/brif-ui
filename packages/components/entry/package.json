{
  "name": "@brifui/components",
  "version": "0.0.28",
  "description": "Brif UI components",
  "sideEffects": false,
  "type": "module",
  "keywords": [
    "box",
    "flexbox",
    "component",
    "ui"
  ],
  "files": [
    "dist",
    "src"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src --dts",
    "dev": "tsup src --watch",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "lint": "eslint ."
  },
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "dependencies": {
    "@brifui/accordion": "^0.0.16",
    "@brifui/avatar": "^0.0.6",
    "@brifui/button": "^0.0.17",
    "@brifui/card": "^0.0.16",
    "@brifui/checkbox": "^0.0.16",
    "@brifui/codeblock": "^0.0.6",
    "@brifui/form": "^0.0.17",
    "@brifui/input": "^0.0.18",
    "@brifui/select": "^0.0.17",
    "@brifui/sidebar": "^0.0.7",
    "@brifui/spinner": "^0.0.6",
    "@brifui/switch": "^0.0.0",
    "@brifui/table": "^0.0.8",
    "@brifui/text": "^0.0.9",
    "@brifui/toast": "^0.0.6",
    "@brifui/tooltip": "^0.0.6"
  },
  "devDependencies": {
    "@brifui/eslint-config": "^0.0.3",
    "@brifui/typescript-config": "^0.0.3",
    "@microsoft/api-extractor": "^7.49.1",
    "@types/react": "^19.0.5",
    "@types/react-dom": "^19.0.3",
    "eslint": "^9.15.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "5.5.4"
  },
  "tsup": {
    "minify": false,
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
