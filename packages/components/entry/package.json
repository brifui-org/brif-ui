{
  "name": "@brifui/components",
  "version": "0.0.53",
  "description": "Brif UI components",
  "sideEffects": false,
  "type": "module",
  "keywords": [
    "box",
    "flexbox",
    "component",
    "ui"
  ],
  "files": [
    "dist",
    "src"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src --dts",
    "dev": "tsup src --watch",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "lint": "eslint ."
  },
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "dependencies": {
    "@brifui/accordion": "^0.0.31",
    "@brifui/alert": "^0.0.4",
    "@brifui/avatar": "^0.0.21",
    "@brifui/badge": "^0.0.15",
    "@brifui/button": "^0.0.33",
    "@brifui/card": "^0.0.31",
    "@brifui/checkbox": "^0.0.31",
    "@brifui/codeblock": "^0.0.23",
    "@brifui/dialog": "^0.0.5",
    "@brifui/form": "^0.0.32",
    "@brifui/input": "^0.0.35",
    "@brifui/radio": "^0.0.8",
    "@brifui/scrollarea": "^0.0.3",
    "@brifui/select": "^0.0.33",
    "@brifui/sidebar": "^0.0.26",
    "@brifui/spinner": "^0.0.21",
    "@brifui/switch": "^0.0.15",
    "@brifui/table": "^0.0.23",
    "@brifui/text": "^0.0.25",
    "@brifui/textarea": "^0.0.10",
    "@brifui/toast": "^0.0.22",
    "@brifui/tooltip": "^0.0.21"
  },
  "devDependencies": {
    "@brifui/eslint-config": "^0.0.5",
    "@brifui/typescript-config": "^0.0.5",
    "@microsoft/api-extractor": "^7.52.8",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "eslint": "^9.29.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "5.8.3"
  },
  "tsup": {
    "minify": false,
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
