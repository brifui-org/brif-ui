{
  "name": "@brifui/components",
  "version": "0.0.1-beta.15",
  "description": "Brif UI components",
  "type": "module",
  "sideEffects": false,
  "keywords": [
    "box",
    "flexbox",
    "component",
    "ui"
  ],
  "files": [
    "dist",
    "src"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rslib build",
    "dev": "rslib build --watch",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "lint": "eslint ."
  },
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "dependencies": {
    "@brifui/box": "workspace:*",
    "@brifui/button": "workspace:*",
    "@brifui/container": "workspace:*",
    "@brifui/flex-box": "workspace:*",
    "@brifui/input": "workspace:*",
    "@brifui/menu": "workspace:*",
    "@brifui/provider": "workspace:*",
    "@brifui/spinner": "workspace:*",
    "@brifui/typography": "workspace:*"
  },
  "devDependencies": {
    "@brifui/core": "workspace:*",
    "@brifui/eslint-config": "workspace:*",
    "@brifui/typescript-config": "workspace:*",
    "@microsoft/api-extractor": "^7.49.1",
    "@rsbuild/plugin-react": "^1.1.0",
    "@rslib/core": "^0.3.1",
    "@types/react": "^19.0.5",
    "@types/react-dom": "^19.0.3",
    "eslint": "^9.15.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "5.5.4"
  },
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
