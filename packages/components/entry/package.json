{
  "name": "@brifui/components",
  "version": "0.0.6",
  "description": "Brif UI components",
  "sideEffects": false,
  "keywords": [
    "box",
    "flexbox",
    "component",
    "ui"
  ],
  "files": [
    "dist",
    "src"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src --dts",
    "dev": "tsup src --watch",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "lint": "eslint ."
  },
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "dependencies": {
    "@brifui/accordion": "workspace:*",
    "@brifui/button": "workspace:*",
    "@brifui/card": "workspace:*",
    "@brifui/checkbox": "workspace:*",
    "@brifui/form": "workspace:*",
    "@brifui/input": "workspace:*",
    "@brifui/select": "workspace:*"
  },
  "devDependencies": {
    "@brifui/eslint-config": "workspace:*",
    "@brifui/typescript-config": "workspace:*",
    "@microsoft/api-extractor": "^7.49.1",
    "@types/react": "^19.0.5",
    "@types/react-dom": "^19.0.3",
    "eslint": "^9.15.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "5.5.4"
  },
  "tsup": {
    "minify": false,
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
