{
  "name": "@brifui/toast",
  "version": "0.0.19",
  "description": "Toast component - Brif UI",
  "sideEffects": false,
  "type": "module",
  "keywords": [
    "toast",
    "component",
    "ui"
  ],
  "files": [
    "dist",
    "src"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsup src --dts",
    "dev": "tsup src --watch",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "eslint ."
  },
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "dependencies": {
    "@brifui/button": "^0.0.30",
    "@brifui/styled": "^0.0.27",
    "@brifui/utils": "^0.0.22",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.1"
  },
  "devDependencies": {
    "@brifui/eslint-config": "^0.0.3",
    "@brifui/mocks": "^0.0.5",
    "@brifui/typescript-config": "^0.0.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9.15.0",
    "global-jsdom": "^26.0.0",
    "jsdom": "^26.0.0",
    "lucide-react": "^0.475.0",
    "typescript": "5.5.4"
  },
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
