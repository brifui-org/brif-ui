{
  "name": "@brifui/toast",
  "version": "0.0.21",
  "description": "Toast component - Brif UI",
  "sideEffects": false,
  "type": "module",
  "keywords": [
    "toast",
    "component",
    "ui"
  ],
  "files": [
    "dist",
    "src"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsup src --dts",
    "dev": "tsup src --watch",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "eslint ."
  },
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "dependencies": {
    "@brifui/button": "^0.0.32",
    "@brifui/styled": "^0.0.29",
    "@brifui/utils": "^0.0.24",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sonner": "^2.0.5"
  },
  "devDependencies": {
    "@brifui/eslint-config": "^0.0.4",
    "@brifui/mocks": "^0.0.6",
    "@brifui/typescript-config": "^0.0.4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "eslint": "^9.29.0",
    "global-jsdom": "^26.0.0",
    "jsdom": "^26.1.0",
    "lucide-react": "^0.515.0",
    "typescript": "5.8.3"
  },
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
