{
  "name": "@brifui/theme",
  "version": "0.0.1-beta.6",
  "description": "Theming library for Brif UI.",
  "type": "module",
  "sideEffects": false,
  "keywords": [
    "theme",
    "theming",
    "ui"
  ],
  "files": [
    "dist",
    "src"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src --dts",
    "dev": "tsup src --watch",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./tailwind": "./src/tailwind/index.ts"
  },
  "peerDependencies": {
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@brifui/eslint-config": "workspace:*",
    "@brifui/typescript-config": "workspace:*",
    "@types/color": "^4",
    "clean-package": "^2.2.0",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "color": "^4.2.3",
    "deepmerge": "^4.3.1"
  },
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
