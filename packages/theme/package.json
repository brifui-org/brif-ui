{
  "name": "@brifui/theme",
  "version": "0.0.10",
  "description": "Theming library for Brif UI.",
  "sideEffects": false,
  "type": "module",
  "keywords": [
    "theme",
    "theming",
    "ui"
  ],
  "files": [
    "styled-system",
    "dist",
    "postcss.js",
    "postcss.cjs",
    "src"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsup src --dts",
    "dev": "tsup src --dts --watch",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "lint": "eslint ."
  },
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./postcss": {
      "require": "./postcss.cjs",
      "import": "./postcss.js"
    }
  },
  "devDependencies": {
    "@brifui/eslint-config": "^0.0.3",
    "@brifui/types": "^0.0.8",
    "@brifui/typescript-config": "^0.0.3",
    "@types/color": "^4",
    "clean-package": "^2.2.0",
    "eslint": "^9.15.0",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "@brifui/postcss": "^0.0.6",
    "@pandacss/dev": "^0.52.0",
    "color": "^4.2.3",
    "deepmerge": "^4.3.1",
    "escalade": "^3.2.0"
  },
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ],
    "shims": true
  }
}
