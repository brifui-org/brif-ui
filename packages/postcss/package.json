{
  "name": "@brifui/postcss",
  "version": "0.0.7",
  "description": "PostCSS library for Brif UI.",
  "sideEffects": false,
  "type": "module",
  "keywords": [
    "postcss-plugin",
    "PostCSS",
    "theming",
    "ui"
  ],
  "files": [
    "dist",
    "src"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsup src --dts",
    "dev": "tsup src --watch",
    "lint": "eslint ."
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "author": "Thinh Trinh Duc <thinh.duc.trinh@gmail.com>",
  "devDependencies": {
    "@brifui/eslint-config": "^0.0.3",
    "@brifui/typescript-config": "^0.0.3",
    "eslint": "^9.15.0",
    "typescript": "5.5.4",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@pandacss/postcss": "^0.53.1",
    "postcss": "^8.4.49"
  },
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ],
    "shims": true
  }
}
