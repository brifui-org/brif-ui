{
  "name": "brif-ui",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Thinh Duc Trinh",
    "email": "thinh.duc.trinh@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brifui-org/brif-ui"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --concurrency 20",
    "lint": "turbo lint",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "typecheck": "turbo run typecheck",
    "codegen": "turbo run codegen --concurrency 1 --ui stream",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "commit": "git-cz",
    "after:install": "yarn codegen",
    "version": "changeset version && yarn install",
    "release": "yarn build && changeset publish && yarn install",
    "changeset:beta": "changeset pre enter beta",
    "create:comp": "plop component"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.11",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/cz-commitlint": "^19.6.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "clean-package": "^2.2.0",
    "commitizen": "^4.3.1",
    "husky": "^9.1.7",
    "inquirer": "9",
    "plop": "^4.0.1",
    "prettier": "^3.2.5",
    "prettier-plugin-sort-json": "^4.1.1",
    "tsup": "^8.3.5",
    "turbo": "^2.3.3",
    "typescript": "5.5.4",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.x"
  },
  "workspaces": [
    "docs/",
    "packages/*",
    "packages/components/*"
  ],
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "packageManager": "yarn@4.6.0",
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
